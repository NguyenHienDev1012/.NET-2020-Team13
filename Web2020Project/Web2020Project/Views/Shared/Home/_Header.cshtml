<script>
    $(document).ready(function () {
        let wrap = $('.wrap-suggestion');
        $('#search').on('keyup', function () {
            let input = $('#search').val();
            if (input === "") {
                wrap.css("display", "none").html("");
            } else {
                $.ajax({
                    method: 'POST',
                    url: 'search',
                    data: {input: input},
                    success: function (result) {
                        if (result === "empty") {
                            wrap.css("display", "none");
                        } else {
                            wrap.css("display", "block");
                            wrap.html(result);
                        }
                    }
                })
            }
        });
    })
</script>
