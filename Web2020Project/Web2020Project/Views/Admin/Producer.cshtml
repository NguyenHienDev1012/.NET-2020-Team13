@using Web2020Project.Model
@model List<Producer>

@{
    ViewBag.Title = "Producer";
    Layout = "~/Views/Shared/Admin/_FramesFull.cshtml";
}
 <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-bar page-header">
                        <ul class="page-breadcrumb">
                            <li>
                                <i class="fa fa-home"></i>
                                <a href="/Admin/Index_Admin">Home</a>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <a href="#">Danh mục</a>
                                <i class="fa fa-angle-right"></i>
                            </li>
                            <li>
                                <a href="/Admin/Producer">Nhà cung cấp</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-heading  d-flex">
                            <div>
                                <i class="fa fa-home"></i>
                                Nhà cung cấp
                            </div>
                            <a class="add " data-toggle="modal" data-target="#myModal" href="#">
                                <div id="add" class=""><i class="fa fa-plus"></i>
                                    <span>Thêm mới</span>
                                </div>
                            </a>
                            <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title">THÊM NHÀ CUNG CẤP</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div id="update-info" class="like-form">
                                                <form id="form-validate" class="form-style" action="/Admin/Producer_Update" method="post">
                                                    <input type="hidden" name="action" value="add">
                                                    <ul class="row">
                                                        <li class="row">
                                                              @{ Producer producer_ss = Session["producer"] as Producer; }
                                                            <div class="col-sm-12 col-xs-6">
                                                                <input type="text" id="producerID" name="producerID"
                                                                       value="@(producer_ss!=null?producer_ss.ProducerId:"")">
                                                                <label for="producerID">Mã nhà cung cấp<span>*</span></label>
                                                            </div>
                                                        </li>
                                                        <li class="row">
                                                            <div class="col-sm-12 col-xs-6">
                                                                <input type="text" id="producerName" name="producerName"
                                                                      value="@(producer_ss!=null?producer_ss.ProducerName:"")">
                                                                <label for="producerName" >Tên nhà cung cấp<span>*</span></label>
                                                            </div>

                                                        </li>
                                                        <li class="row">
                                                            <div class="col-sm-12 col-xs-6">
                                                                <input type="text" id="producerAddress" name="producerAddress" 
                                                                       value="@(producer_ss!=null?producer_ss.ProducerAddress:"")">
                                                                <label for="producerAddress" >Địa chỉ<span>*</span></label>
                                                            </div>
                                                        </li>
                                                    </ul>
                                                    <div class="btn-submit">
                                                        <button type="submit" id="update-btn">Thêm</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close
                                            </button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->
                        </div>

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @RenderPage("~/Views/Shared/Admin/_Dialog.cshtml")
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                    <tr>
                                        <th>Mã nhà cung cấp</th>
                                        <th>Tên nhà cung cấp</th>
                                        <th>Địa chỉ</th>
                                        <th class="remove" style="text-align: center">Sửa</th>
                                        <th class="remove" style="text-align: center">Xóa</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @* <%try{%> *@
                                    @* <%List<NhaCungCap> ds_ncc = ProducerDAO.findAll();%> *@
                                    @* <%if (ds_ncc != null) {%> *@
                                    @* <%for(NhaCungCap ncc:ds_ncc) {%> *@
                                    @foreach (Producer prod in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@prod.ProducerId</td>
                                            <td>@prod.ProducerName</td>
                                            <td>@prod.ProducerAddress</td>
                                            <td style="text-align: center">
                                                <a href="/Admin/Producer_Update?producerID=@prod.ProducerId" class="btn default btn-xs purple btn-edit">
                                                    <i class="fa fa-edit"></i></a></td>
                                            <td style="text-align: center">
                                                <a data-toggle="modal" data-target="@("#" + prod.ProducerId)"
                                                   class="btn default btn-xs black btn-delete"><i class="fa fa-trash-o"></i></a>
                                                <div id="@prod.ProducerId" class="modal fade modal-confirm" role="dialog">
                                                    <div class="modal-dialog modal-sm">
                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-body">
                                                                <p class="text-content">Xác nhận xóa nhà cung cấp <em>@prod.ProducerName</em></p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" onclick="return location.href='/Admin/Producer_Delete?producerID=@prod.ProducerId'"class="btn-cf">Xác nhận</button>
                                                                <button type="button" class="tbn-cancle" data-dismiss="modal">Hủy</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>