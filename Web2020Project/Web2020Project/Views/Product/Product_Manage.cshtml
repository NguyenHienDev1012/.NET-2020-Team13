@using Web2020Project.Model
@{
    @ViewBag.Title
    Layout = "~/Views/Shared/Admin/_FramesFull.cshtml";
}
@section jsFooter{
    <script>
                $('#picture').on('click', function(e){
                    e.preventDefault();
                    var finder = new CKFinder();
                    finder.selectActionFunction = function(url){
                         $('#picture').val(url);
                    };
                finder.popup();
                });
    </script>
}
<div id="page-wrapper">
<div class="container-fluid">
<div class="row">
    <div class="col-lg-12">
        <div class="page-bar page-header">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/Admin/Index_Admin">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="#">Danh mục</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="/Product/Product_Manage">Quản lý sản phẩm</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
<div class="col-lg-12">
<div class="panel panel-default">
<!-- /.panel-heading -->
<div class="panel-heading  d-flex">
    <div>
        <i class="fa fa-envira"></i>
        Sản Phẩm
    </div>
    <a class="add " data-toggle="modal" data-target="#myModal" href="#">
        <div id="add" class="">
            <i class="fa fa-plus"></i>
            <span>Thêm mới</span>
        </div>
    </a>
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">THÊM SẢN PHẨM</h4>
                </div>
                <div class="modal-body">
                    <div id="update-info" class="like-form">
                        <form id="form-validate" class="form-style"
                              action="/Product/Product_Update" method="POST"
                              enctype="multipart/form-data">
                                <input type="hidden" name="action" value="add">
                            <ul class="row">
                                <li class="row">
                                @{ ProductDetail productDetail_ss = Session["productDetail"] as ProductDetail; }
                                <div class="col-sm-4 col-xs-6">
                                    <input type="text" id="productName"
                                           name="productName"
                                           value="@(productDetail_ss!=null?productDetail_ss.Product.ProductName:"")">
                                    <label for="productName">Tên sản phẩm<span>*</span></label>
                                </div>
                                <div class="col-sm-4 col-xs-6">
                                    <select id="kind" name="kind">
                                        <option value="0">Sản phẩm Mới</option>
                                        <option value="2">Sản phẩm khuyến mãi</option>
                                        <option value="1">Sản phẩm Hot</option>
                                    </select>
                                    <label for="kind" class="level-span">Loại</label>
                                </div>
                                <div class="col-sm-4 col-xs-6">
                                    <select id="producer" name="producer">
                                        @try
                                        {
                                            List<Producer> list = ViewBag.ListProducer;
                                            if (list != null)
                                            {
                                                foreach (Producer prod in list)
                                                {
                                                    <option value="@prod.ProducerName">@prod.ProducerName</option>
                                                }
                                            }
                                        }
                                        catch (Exception e)
                                        {
                                            
                                        }
                                    </select>
                                    <label for="producer" class="level-span">
                                        Nhà cung
                                        cấp<span>*</span>
                                    </label>
                                </div>
                                <li class="row">
                                    <div class="col-sm-3 col-xs-6">
                                        <input type="number" id="salePrice" name="salePrice"
                                               value="@(productDetail_ss!=null?productDetail_ss.Product.SalePrice+"":"")">
                                        <label for="salePrice">Giá đã giảm</label>
                                    </div>
                                    <div class="col-sm-3 col-xs-6">
                                        <input type="number" id="price" name="price"
                                               value="@(productDetail_ss!=null?productDetail_ss.Product.Price+"":"")">
                                        <label for="price">Giá bán</label>
                                    </div>
                                    <div class="col-sm-2 col-xs-6">
                                        <input type="number" id="amount"
                                               name="amount"
                                               value="@(productDetail_ss!=null?productDetail_ss.Product.Amount+"":"")">
                                        <label for="amount">Số lượng<span>*</span></label>
                                    </div>
                                    <div class="col-sm-2 col-xs-6">
                                        <input type="text" id="picture" name="picture" placeholder="Select Picture" value="">
                                        <label for="picture">Hình ảnh</label>
                                        @* <input type="hidden" id="sourcePic" name="sourcePic" value=""></input> *@
                                    </div>
                                    <div class="col-sm-2 col-xs-6">
                                        <select id="status" name="status">
                                            <option value="2">Mở bán</option>
                                            <option value="1">Gần hết hàng</option>
                                            <option value="0">Ẩn</option>
                                        </select>
                                        <label for="status" class="level-span">
                                            Trạng
                                            thái
                                        </label>
                                    </div>
                                </li>
                            </ul>
                            <ul class="row">
                                <h3 class="col-sm-12"
                                    style="text-align: center;margin-bottom: 20px;color: #215862;font-weight: 600">
                                    Chi tiết sản phẩm
                                </h3>
                                <li class="row">
                                    <div class="col-sm-12 col-xs-6">
                                        <input type="text" id="gift" name="gift"
                                                value="@(productDetail_ss!=null?productDetail_ss.Gift+"":"")">
                                        <label for="gift">Quà tặng</label>
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="screen" name="screen"
                                              value="@(productDetail_ss!=null?productDetail_ss.Technical.Screen+"":"")">
                                        <label for="screen">Màn hình</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="operatingSystem" name="operatingSystem"
                                             value="@(productDetail_ss!=null?productDetail_ss.Technical.OperatingSystem+"":"")">
                                        <label for="operatingSystem">Hệ điều hành</label>
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="CPU" name="CPU"
                                               value="@(productDetail_ss!=null?productDetail_ss.Technical.Cpu+"":"")">
                                        <label for="CPU">CPU</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="RAM" name="RAM"
                                              value="@(productDetail_ss!=null?productDetail_ss.Technical.Ram+"":"")">
                                        <label for="RAM">RAM</label>
                                    </div>
                                </li>
                                <li class="row">
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="CAMERA" name="CAMERA"
                                               value="@(productDetail_ss!=null?productDetail_ss.Technical.Camera+"":"")">
                                        <label for="CAMERA">CAMERA</label>
                                    </div>
                                    <div class="col-sm-6 col-xs-6">
                                        <input type="text" id="PIN" name="PIN"
                                              value="@(productDetail_ss!=null?productDetail_ss.Technical.Pin+"":"")">
                                        <label for="pin">PIN</label>
                                    </div>
                                </li>
                            </ul>
                            <div class="btn-submit">
                                <button type="submit" id="update-btn">Thêm</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    @RenderPage("~/Views/Shared/Admin/_Dialog.cshtml")
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Nhà cung cấp</th>
                <th>Giá đã giảm</th>
                <th>Giá bán</th>
                <th>Số lượng</th>
                <th class="remove">Hình ảnh</th>
                <th class="remove">Trạng thái</th>
                <th>Loại</th>
                <th class="remove" style="text-align: center">Sửa</th>
                <th class="remove" style="text-align: center">Xóa</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Product prod in Model)
            {
                <tr class="odd gradeX">
                    <td>
                        @prod.ProductId
                    </td>
                    <td>
                        @prod.ProductName
                    </td>
                    <td>
                        @prod.Producer
                    </td>
                    <td>
                        @prod.SalePrice
                    </td>
                    <td>
                        @prod.Price
                    </td>
                    <td>
                        @prod.Amount
                    </td>
                    <td>
                        <img src="@prod.Picture"
                             alt=""
                             width="60">
                    </td>
                    <td style="text-align: center; font-size: 17px">
                        @if (@prod.Status == 2)
                        {
                            <i class="fa fa-check" aria-hidden="true" style="color: #0a7f7f"></i>
                        }
                        else if (@prod.Status == 1)
                        {
                            <i class="fa fa-exclamation-circle" aria-hidden="true" style="color: #ff8e27"></i>
                        }
                        else
                        {
                            <i class="fa fa-ban" aria-hidden="true" style="color: #de1d18"></i>
                        }
                    </td>
                    <td style="text-align: center; font-weight: 700">
                        @if (@prod.Kind == 2)
                        {
                            <span style="color: #de8f04">Sale</span>
                        }
                        else if (@prod.Kind == 1)
                        {
                            <span style="color: #de1d18">Hot</span>
                        }
                        else
                        {
                            <span style="color: #31de21">New</span>
                        }
                    </td>
                    <td style="text-align: center">
                        <a
                            href="/Product/Product_Update?productID=@prod.ProductId"
                            class="btn default btn-xs purple btn-edit">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    <td style="text-align: center">
                        <a data-toggle="modal" data-target="@("#" + prod.ProductId)"
                           class="btn default btn-xs black btn-delete">
                            <i class="fa fa-trash-o"></i>
                        </a>
                        <div id="@prod.ProductId" class="modal fade modal-confirm" role="dialog">
                            <div class="modal-dialog modal-sm">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <p class="text-content">Xác nhận xóa sản phẩm <em>@prod.ProductName</em></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" onclick="return location.href='/Product/Product_Delete?IDProduct=@prod.ProductId'"
                                                class="btn-cf">
                                            Xác nhận
                                        </button>
                                        <button type="button" class="tbn-cancle" data-dismiss="modal">Hủy</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
</div>
</div>
</div>
</div>
</div>